@model managemen1.Models.userser
@{

}
    
<style>
    #box {
        border: 1px solid black;
        height: 100%;
    }

    #main-div {
        height: 900px;
        background-image: url('../../Content/img/photo-1528297506728-9533d2ac3fa4.jpeg');
        background-size: 100% 900px;
    }

    .insidebox {
        border: 1px solid black;
        margin: 10% auto 10% auto;
        max-width: 500px;
        min-width: 150px;
        padding-left: 60px;
        padding-right: 60px;
        border-radius: 50px 50px 50px 50px;
        background-color: rgba(128, 135, 125,0.5);
    }

    div h1 {
        text-align: center;
    }

    p#para {
        text-align: center;
        font-size: 14px;
    }
</style>
<link href="~/Content/bootstrap.css" rel="stylesheet" />
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />

<script src="js/bootstrap.min.js"></script>
<script src="http://code.jquery.com/jquery.js"></script>
<div id="main-div">
    <div id="box" class="img-responsive">
        @using (Html.BeginForm("Create",
                          "User",
                          FormMethod.Post,
                          new { enctype = "multipart/form-data" }))
        {
            <div class="insidebox">
                <div> <h1 style="color:white">Tambahkan User</h1></div>

                <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-addon"><span class="glyphicon-glyphicon-cog"></span></div>
                        @Html.DropDownListFor(x => x.User_fk_Set, ViewBag.userlist as SelectList, "--Status--", new { @class = "form-control" })
                    </div>
                    <span style="color:red">   @Html.ValidationMessageFor(x => x.User_fk_Set) </span>
                </div>

                <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-addon"><span class="glyphicon glyphicon-user"></span></div>
                        @Html.TextBoxFor(x => x.UserName, new { @class = "form-control", @placeholder = "User Name" })
                    </div>
                    <span style="color:red">   @Html.ValidationMessageFor(x => x.UserName) </span>
                </div>

                <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-addon"><span class="glyphicon glyphicon-envelope"></span></div>
                        @Html.TextBoxFor(x => x.UserEmail, new { @class = "form-control", @placeholder = "UserEmail" })
                    </div>
                    <span style="color:red">   @Html.ValidationMessageFor(x => x.UserEmail) </span>
                </div>

                <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-addon"><span class="glyphicon glyphicon-earphone"></span></div>
                        @Html.TextAreaFor(x => x.UserNoTelp, new { @class = "form-control", @placeholder = "No Telp" })
                    </div>
                    <span style="color:red">   @Html.ValidationMessageFor(x => x.UserNoTelp) </span>
                </div>


                <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-addon"><span class="glyphicon glyphicon-cloud-upload"></span></div>
                        <p class="contact" style="color:white"><label for="name" > Image:</label></p>
                        <input type="file" name="imageFile" id="imageFile" class="form-control" required="required">
                    </div>
                </div>
                <div class="form-group">
                    <input type="submit" value="Submit" class="btn btn-success btn-block" />
                </div>
                <div class="form-group">
                    <p style="color:red">@ViewBag.error</p>
                </div>
            </div>
        }
    </div>
</div>
<script src="~/Scripts/jquery.validate-vsdoc.js"></script>
<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
